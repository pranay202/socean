{
  "version": 2,
  "builds": [
    {
      "src": "./server/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "./client/build",   
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/backend/index.js"
    }
  ],
  "routes": [
    { "src": "/server/index.js", "dest": "index.js" },
    { "src": "/api/(.*)", "dest": "index.js" },
    { "src": "/(.*)", "dest": "client/build/index.html" }
  ]
}
